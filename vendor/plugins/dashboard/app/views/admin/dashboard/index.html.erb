<div class='clearfix'>
  <div id='records'>
    <%= render :partial => "recent_activity" %>
  </div>
  <div id='actions'>
    <h2><%= t(:common_tasks) %></h2>
    <ul>
      <%# I8N: How to translate tab names? %>
      <% if Refinery::Plugins.active.names.include?("refinery_pages") %>
        <li>
          <%= link_to t(:add_a_new_page), new_admin_page_url, :class => "add_icon" %>
        </li>
        <li>
          <%= link_to t(:update_a_page), admin_pages_url, :class => "edit_icon" %>
        </li>
      <% end %>
      <% if Refinery::Plugins.active.names.include?("refinery_resources") %>
        <li>
          <%= link_to t(:upload_a_file), new_admin_resource_url(:dialog => true, :width => 600, :height => 300), :class => "add_icon" %>
        </li>
      <% end %>
      <% if Refinery::Plugins.active.names.include?("refinery_images") %>
        <li>
          <%= link_to t(:upload_a_image), new_admin_image_url(:dialog => true, :width => 600, :height => 300), :class => "add_icon" %>
        </li>
      <% end %>
      <li>
        <%= link_to t(:see_home_page), root_url, :class => "go_icon", :target => "_blank" %>
      </li>
    </ul>

    <% if ::RoutingFilter::Locale.i18n_enabled? %>
      <h2><%= t('.change_language') %></h2>
      <ul>
        <% ::RoutingFilter::Locale.default_locales.each_pair do |locale_key, locale_title| %>
          <li<%= " class='selected'" if locale_key.to_sym == ::RoutingFilter::Locale.current_locale %>>
            <%= link_to locale_title,
                        {:controller => controller_name, :action => action_name, :set_locale => locale_key },
                        :style => "background-image: url('/images/refinery/icons/flags/#{locale_key}.png');" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>